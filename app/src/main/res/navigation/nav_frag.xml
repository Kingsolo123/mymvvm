<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_frag"
    app:startDestination="@id/home_fragment">

    <fragment
        android:id="@+id/home_fragment"
        android:name="com.king.mvvm_wanandroid.ui.home.HomeFragment"
        android:label="HomeFragment" />
    <fragment
        android:id="@+id/mine_fragment"
        android:name="com.king.mvvm_wanandroid.ui.mine.MineFragment"
        android:label="MineFragment" >
        <action
            android:id="@+id/action_mine_fragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/wechat_fragment"
        android:name="com.king.mvvm_wanandroid.ui.wechat.WechatFragment"
        android:label="WechatFragment" />
    <fragment
        android:id="@+id/project_fragment"
        android:name="com.king.mvvm_wanandroid.ui.project.ProjectFragment"
        android:label="ProjectFragment" />
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.king.mvvm_wanandroid.ui.login.LoginFragment"
        android:label="LoginFragment" />
</navigation>